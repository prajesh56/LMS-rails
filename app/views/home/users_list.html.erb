
<% if !@users.empty? %>
	<table class="table table-striped p-1">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th scope="col">Contact</th>
			<th scope="col">Company Join Date</th>
      <th scope="col">Role</th>
      <th scope="col">Email</th>
			<th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |users| %>
			<tr>
				
				<td><%= users.name.capitalize %></td>
				<td><%= users.address.capitalize%></td>
				<td><%= users.contact%></td>
                <td><%= users.start_date%></td>
				<td><%= users.role.capitalize %></td>
				<td><%= users.email%></td>
				<td><%= button_to "Delete", user_registration_path(users), method: :delete, class:'btn btn-outline-danger btn-sm' %></td>
			</tr>
		<% end %>
  </tbody>
</table>
	
<% end %>

