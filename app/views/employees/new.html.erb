<h2>Create new Employee</h2>

<%= form_with model: @employee do |form|%>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>
  <div>
    <%= form.label :contact %>
    <%= form.text_field :contact %>
  </div>
  <div>
    <%= form.label :start_date %>
    <%= form.date_field :start_date %>
  </div>
  <div>
		<%= form.radio_button :role, "admin" %>
		<%= form.label :role, "Admin" %>
		<%= form.radio_button :role, "employee" %>
		<%= form.label :role, "Employee" %>
  </div>
  
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit "Create_employee" %>
  </div>
<%end%>
<div>
	<%= flash[:notice] %>
</div>