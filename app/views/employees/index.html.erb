
<h2>Employees list</h2>
<% if !@employees.empty? %>
	<div class = "table_block">
	<table>
		<tr>
			<th>Name</th>
			<th>Address</th>
			<th>Contact</th>
      <th>Company Join Date</th>
			<th>Role</th>
			<th>Email</th>
		</tr>
		<% @employees.each do |employees| %>
			<tr>
				<td><%= employees.name.capitalize %></td>
				<td><%= employees.address.capitalize%></td>
				<td><%= employees.contact%></td>
                <td><%= employees.start_date%></td>
				<td><%= employees.role.capitalize %></td>
				<td><%= employees.email%></td>
				<td><%= link_to "Delete", employees, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></td>
			</tr>
		<% end %>
	</table>
	</div>
<% end %>
<%= link_to "Back to dashboard", dashboard_path%>
