
<h2>Sign up</h2>
<div class="d-flex align-content-start flex-wrap p-1">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field p-1">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", required: true %>
  </div>

  <div class="field p-1">
    <%= f.label :photo %><br />
    <%= f.file_field :avatar %>
  </div>
  

   <div class="field p-1">
    <%= f.label :contact %><br />
    <%= f.text_field :contact, autocomplete: "contact", required: true %>
  </div>

  <div class="field p-1">
    <%= f.label :address %><br />
    <%= f.text_field :address, autocomplete: "address", required: true %>
  </div>

  <div class="field p-1">
    <%= f.label :start_date %>
    <%= f.date_field :start_date %>
  </div>
  
  <div class="field p-1">
		<%= f.radio_button :role, "admin" %>
		<%= f.label :role, "Admin" %>
		<%= f.radio_button :role, "employee" %>
		<%= f.label :role, "Employee" %>
  </div>

  <div class="field p-1">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field p-1">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field p-1">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
    

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
  </div>
<% end %>

<%= render "users/shared/links" %>
