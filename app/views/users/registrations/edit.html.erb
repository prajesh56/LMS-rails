<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
<div class="d-flex flex-column p-2">
  <div class="field p-2">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", required: true %>
  </div>

  <div class="field p-2">
    <%= f.label :photo %>
    <%= f.file_field :avatar, class:"form-control", id:"formFile"%>
  </div>
  
  <div class= "d-flex flex-wrap">
    <div class="field p-2">
      <%= f.label :contact %>
      <%= f.text_field :contact, autocomplete: "contact", required: true %>
    </div>

    <div class="field p-2">
      <%= f.label :address %>
      <%= f.text_field :address, autocomplete: "address", required: true%>
    </div>
    
    <!--
    <div class="field p-2">
      <%= f.label :start_date %>
      <%= f.date_field :start_date, disabled: true %>
    </div>
    -->

    <!--
    <div class="field p-2">
	  	<%= f.radio_button :role, "admin", disabled: true %>
	  	<%= f.label :role, "Admin" %>
	  	<%= f.radio_button :role, "employee", disabled: true %>
	  	<%= f.label :role, "Employee" %>
    </div>
    -->

    <div class="field p-2">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", disabled: true%>
    </div>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field p-2">
    <%= f.label :password %> 
    <%= f.password_field :password, autocomplete: "new-password", placeholder:'Enter your current or new password'%>
    <% if @minimum_password_length %>
      
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field p-2">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:'Re-enter your current or new password' %>
  </div>
  <!--
  <div class="field p-2">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %><br />
  </div>
  -->

  <div class="actions"><br />
    <%= f.submit "Update" %>
  </div>
</div>
<% end %>
