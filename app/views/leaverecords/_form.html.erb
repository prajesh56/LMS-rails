<%= form_with model: leaverecords do |form|%>
  <div class ="d-flex flex-column align-content-center justify-content-center p-1">
    <%= form.text_field :user_id, value: current_user.id, :hidden => true %>
	  <div class="field p-2">
      <%= form.label :date_from %>
      <%= form.date_field :date_from %>
    </div>

    <div class="field p-2">
      <%= form.label :date_to %>
      <%= form.date_field :date_to %>
    </div>

    <div class="field p-2">
      <%= form.label :description %>
      <%= form.text_field :description %>
    </div>
	  
    <!--Status-->
	  <%= form.hidden_field :status, value: 'Approval Pending' %>
	  
  
	  <!--approval by-->  
    <div class="field p-2">
	  	<%= form.label :Supervisor %>
	  	<%= form.select(:approval_by, options_for_select(@user_options)) %>
    </div>
	
	</div>
  
  <%= form.submit %>
  
  
<%end%>

<% if leaverecords.errors.any? %>
  <ul>
    <% leaverecords.errors.each do |error| %>
      <li><%= error.full_message %></li>
    <% end %>
  </ul>
<% end %>