
<header>
  <div class ="left"> 
	<%if user_signed_in? %>
  	<h2><%= link_to 'Leave Management System', dashboard_path, class:'link'%></h2>
	<%else%>
		<h2><%= link_to 'Leave Management System', root_path, class:'link'%></h2>
	<%end%>
  </div>
	<div class = "right">
		<% if user_signed_in? %>
			<div>
  			<%= link_to current_user.name, edit_user_registration_path, class:'link' %>
			</div>
			<%if current_user.avatar.attached?%>
				<div>
					<%=image_tag url_for(current_user.avatar), style:'width:60px;height:50px;border-radius:50%'%>
				</div>
			<%else%>
				<div style="width:30px;height:30px;background-color:red;text-align:center;border-radius:50%">
					<%= current_user.name[0] %>
				</div>
			<%end%>
			<div>
				<%= button_to "Logout", destroy_user_session_path, method: :delete, class:'btn btn-outline-danger'%>
			</div>
		<% end %>
	</div>
</header>
